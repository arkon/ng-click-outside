{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": true,
    "stripInternal": true,
    "outDir": "lib_commonjs/",
    "rootDir": "src",
    "lib": ["dom", "es5", "es2015.core", "es2015.collection", "es2015.iterable", "es2015.promise"]
  },
  "include": [
    "src/**/*"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "angularCompilerOptions": {
    "decoratorsAs": "static fields",
    "skipTemplateCodegen": true,
    "preserveWhitespaces": false,
    // https://angular.io/guide/creating-libraries#transitioning-libraries-to-partial-ivy-format
    "compilationMode": "partial"
  }
}
